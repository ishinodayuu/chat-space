      %h3.name 
        = current_user.name
        -# = current_groups.name
      %ul.main_icon
        %li.top-items__icons 
          = link_to new_group_path do
            = icon('fas', 'edit')        
        %li.top-items__icons 
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
